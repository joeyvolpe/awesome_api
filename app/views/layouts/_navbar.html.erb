			<%= link_to 'TradeMe', root_path  %>
		</div>
		<div class="item"><%= link_to 'Search Users', users_path %></div>
		<div class="item"><%= link_to 'Items Available', items_path %></div>
		<div class="item"><%= link_to "My Trades", my_trades_path(current_user) %>
			<% if logged_in? && pending_trades > 0 %>
				<div class="ui red label">
					<%= pending_trades %>
				</div>
			<% end %>
		</div>

		<div class="ui dropdown">
		    <div class="item"><%= "#{current_user.name}" %><i class="dropdown icon"></i></div>
