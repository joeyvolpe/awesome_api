		      <div class="item"><%= link_to 'Logout', logout_path, method: :delete  %></div> 
		      <!-- <div class="divider"></div> -->
		    </div>
	  	</div>
	</div>

<% else %>
	<div class="ui menu">
		<div class="item">
			<%#= image_tag "logo.png", :class => "ui avatar image" %>
			<%= link_to 'TradeMe', root_path  %>
		</div>
		<div class="item"><%= link_to 'Search Users', users_path %></div>
		<div class="item"><%= link_to 'Items Available', items_path %></div>
		<div class="item"><%= link_to 'Signup', new_user_path %></div>

		<div class="item"><%= link_to 'Login', login_path %></div>
	</div>
<% end %>
