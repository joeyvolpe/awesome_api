<br>
<div class="container-fluid">
  <div class="well well-xs">
    <h2 id="logo">Today's Items</h2>
    <%= link_to "add item", new_item_path %>
  </div>
  <br>
  <div class="well well-xs">
    <% @items.reverse.each do |item| %>
      <%= image_tag item.item_image.url(:thumb)  %>
      <strong><%= link_to "#{item.item_name}", item %></strong> by 
      <em><%#= link_to "#{item.user.name},", user_path(item.user) %></em>
      <br> 
      <%= item.created_at.strftime("created at %I:%M%p on %m/%d/%Y")%> 
      <br>
      <%= link_to 'Show', item, :class => "btn btn-primary" %>
      <%= link_to 'Edit', edit_item_path(item), :class => "btn btn-primary" %>
      <br>
    <% end %>
  </div> 
  <br>
  <br>
</div>