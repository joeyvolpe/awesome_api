<br>
<div class="container-fluid">
  <div class="well well-xs">
    <h2 id="logo">Today's Items</h2>
</div>
  <br>
  <div>
    <ul>
    <% @items.reverse.each do |item| %>
      <%= image_tag item.item_image.url(:thumb)  %>
      <%= link_to "#{item.item_name}", user_path(item.user_id) %></strong> by <%= item_owner(item) %>
      <em><%#= link_to "#{item.user.name},", user_path(item.user) %></em>
      <br> 
      <%= time_ago_in_words(item.created_at) %> ago
      <br>
      <%= link_to 'Show', user_path(item.user_id), :class => "btn btn-primary" %>
      <br>
    <% end %>
    </ul>
  </div> 
  <br>
  <br>
</div>


