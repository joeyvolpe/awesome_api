<div class="ui page grid">
		<div class="ui large feed white segment" >
			
				<% @trades.reverse.each do |trade| %>

				<% unless offered_item(trade).nil? %>

				<ul>
					<div class="event">
						<div class="ui equal width center aligned grid">
							<div class="seven column middle aligned row">

							   <div class="column ui">
							   	<%= link_to (image_tag trade_requester(trade).image), trade_requester(trade), :class => "ui avatar image" %>
							   <%#= image_tag trade_requester(trade).image, :class => "ui small fluid image" %>
							   <%= link_to (trade_requester(trade).name), trade_requester(trade) %> <%= link_to (trade_requester(trade).last_name), trade_requester(trade) %>


							   </div>

						   	 <div class="column ui">

						   	 	TRADED
						   	</div>
				   	
							   <div class="column ui"><%= link_to (image_tag offered_item(trade).item_image), trade_requestee(trade), :class => "ui small fluid image" %>
							   <%= link_to (h truncate(offered_item(trade).item_name, :length => 30)), trade_requestee(trade) %>

							   </div>
						    	<div class="column ui">
						    		FOR
						    	</div>
						    	<div class="column ui"><%= link_to (image_tag requested_item(trade).item_image), trade_requester(trade), :class => "ui small fluid image"  %><%= link_to (h truncate(requested_item(trade).item_name, :length => 30)), trade_requester(trade) %>
							   </div>
						    	<div class="column ui ">
						    		WITH
						    	</div>
						    	<div class="column ui "><%= image_tag trade_requestee(trade).image, :class => "ui tiny fluid image" %><%= trade_requestee(trade).name %> <%= trade_requestee(trade).last_name %>
						    	</div>
						  	</div>

						<div class="ui divider"></div>
					</div>
				</div>
			</ul>

			<% end %>

		<% end %>
	</div>	
</div>

